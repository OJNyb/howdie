---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"book">["data"];

const {
  title,
  description,
  heroImage,
  amazonLink,
  barnesNobleLink,
  adlibrisLink,
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        padding: 64px 32px;
      }
      .hero-image {
        width: 300px;
        margin: auto;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        box-shadow: var(--box-shadow);
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .purchase {
        display: flex;
        align-items: center;
        justify-content: space-around;
        flex-wrap: wrap;
        gap: 32px;
        margin-top: 64px;
      }
      .purchase-link {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        width: 210px;
        padding: 32px;
        box-sizing: border-box;
        box-shadow: var(--box-shadow);
        text-decoration: none;
        border-radius: 0.5em;
      }
      .purchase-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <img width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div>
        <div class="prose">
          <div class="title">
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
          <div class="purchase">
            {
              amazonLink && (
                <a href={amazonLink} class="purchase-link">
                  <img src="/amazon.png" width="64px" />
                  <span>Amazon</span>
                </a>
              )
            }
            {
              barnesNobleLink && (
                <a href={barnesNobleLink} class="purchase-link">
                  <img src="/barnesnoble.png" width="64px" />
                  <span>Barnes & Noble</span>
                </a>
              )
            }
            {
              adlibrisLink && (
                <a href={adlibrisLink} class="purchase-link">
                  <img src="/adlibris.png" width="64px" />
                  <span>Adlibris</span>
                </a>
              )
            }
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
