---
import { getCollection } from "astro:content";

const posts = (await getCollection("book")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<style>
  section {
    max-width: 860px;
    padding: 0 64px;
    margin: auto;
  }
  h2 {
    text-align: center;
    margin: 0 0 32px 0;
  }
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
    justify-content: space-evenly;
    gap: 40px;
  }
  ul li {
    /* width: calc(50% - 1rem); */
    max-width: 200px;
  }
  ul li * {
    text-decoration: none;
    transition: 0.2s ease;
  }

  ul li img {
    margin-bottom: 0.5rem;
  }
  ul li a {
    display: block;
  }
  .title {
    margin: 0;
    color: rgb(var(--black));
    line-height: 1;
    font-size: 24px;
    text-align: center;
    font-weight: 400;
  }
  .date {
    margin: 0;
    color: rgb(var(--gray));
  }
  ul li a:hover h4,
  ul li a:hover .date {
    color: rgb(var(--accent));
  }

  ul a:hover .title {
    text-decoration: underline;
  }
</style>
<section>
  <h2>Books</h2>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`/book/${post.slug}/`}>
            <img src={post.data.heroImage} alt="" />
            <h4 class="title">{post.data.title}</h4>
          </a>
        </li>
      ))
    }
  </ul>
</section>
